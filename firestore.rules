rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read their own wallet
    match /wallets/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read their own ledger entries
    match /ledger/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow server-side operations (for webhooks and admin functions)
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Allow public read access to products
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Allow webhook processing
    match /webhooks/{webhookId} {
      allow read, write: if true;
    }
    
    // Allow risk decisions
    match /riskDecisions/{decisionId} {
      allow read, write: if true;
    }

    // Fraud signals - service-only write, admin/uid read
    match /fraudSignals/{signalId} {
      allow read: if request.auth != null && (request.auth.token.admin == true || resource.data.uid == request.auth.uid);
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Rate limit counters - service-only
    match /rlCounters/{counterId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Denylist - admin-only
    match /denylist/{key} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Allowlist - admin-only
    match /allowlist/{key} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Manual reviews - admin-only
    match /manualReviews/{ticketId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Allow user mappings for PayNow integration
    match /userMappings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow PayNow customers
    match /paynowCustomers/{customerId} {
      allow read, write: if true;
    }
  }
}
