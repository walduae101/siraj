{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "run": { "serviceId": "siraj-web", "region": "us-central1" }
      },
      {
        "source": "**",
        "run": { "serviceId": "siraj-web", "region": "us-central1" }
      }
    ]
  }
}
